{% extends '::base.html.twig' %}
{% block title %}Overview{% endblock %}
{% block navigation %}
    {% include '::navigation.auth.html.twig' %}
{% endblock %}

{% block body -%}
    <h1>Overview</h1>
    <hr>
    <table class="table table-striped table-condensed" data-toggle="table">
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('entry_show', { 'id': entity.id }) }}">#{{ entity.id }} {{ entity.title }}</a> - <a href="{{ path('entry_edit', { 'id': entity.id }) }}">edit</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}