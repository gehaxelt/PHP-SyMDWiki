{% extends '::base.html.twig' %}
{% block title %}Public content{% endblock %}

{% block body -%}
    <h1>Public content</h1>
    <hr>
    <table class="table table-striped table-condensed" data-toggle="table">
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('public_show', { 'id': entity.id }) }}">#{{ entity.id }} {{ entity.title }}</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}