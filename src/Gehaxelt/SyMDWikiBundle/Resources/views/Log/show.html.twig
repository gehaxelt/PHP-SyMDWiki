{% extends '::base.html.twig' %}
{% block title %}View Activity{% endblock %}
{% block navigation %}
    {% include '::navigation.auth.html.twig' %}
{% endblock %}
{% block body -%}
    <h1>Activity #{{ entity.id }}</h1>
    <hr>
    <table class="table table-striped table-condensed" data-toggle="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Timestamp</th>
                <td>{{ entity.timestamp|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Severity</th>
                <td>{{ entity.severity }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ entity.message }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}